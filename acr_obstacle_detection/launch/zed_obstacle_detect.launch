<launch>

    <!-- ZED Camera (remember to run the no tf version) -->
    <!-- <include file="$(find zed_wrapper)/launch/zed_no_tf.launch"/> -->

    <!--Map server-->
    <arg name="map_file" default="$(find acr_obstacle_detection)/maps/blank_map.yaml" />
	<node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

    <!-- Move base variables -->
    <arg name="cmd_vel_topic" default="/cmd_vel" />
    <arg name="odom_topic" default="odom" /> 

    <!-- Move base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
        <rosparam file="$(find acr_obstacle_detection)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find acr_obstacle_detection)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find acr_obstacle_detection)/params/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find acr_obstacle_detection)/params/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find acr_obstacle_detection)/params/move_base_params.yaml" command="load" />
        <rosparam file="$(find acr_obstacle_detection)/params/dwa_local_planner_params).yaml" command="load" />
        <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
        <remap from="odom" to="$(arg odom_topic)"/>
    <!-- <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" /> -->
    </node>

</launch>